<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <gradient
                android:startColor="#ff4b1f"
                android:endColor="#1fddff"
                android:angle="270"/>
            <stroke
                android:width="1dp"
                android:color="#1fddff"/>
            <corners
                android:radius="4dp"/>
            <padding
                android:right="10dp"
                android:left="10dp"
                android:bottom="10dp"
                android:top="10dp"

        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <solid

        </shape>
    </item>


</selector>